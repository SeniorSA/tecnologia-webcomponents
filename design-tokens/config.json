{
  "source": ["properties/**/*.json"],
  "platforms": {
    "scss": {
      "transformGroup": "scss",
      "buildPath": "dist/tokens/",
      "files": [
        {
          "destination": "scss/_variables.scss",
          "format": "scss/map-deep"
        },
        {
          "destination": "css/_variables.css",
          "format": "css/variables"
        }
      ]
    }
  }
}
